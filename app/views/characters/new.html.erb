
  <%= form_for @character, html: {class: "form-horizontal"} do |f| %>
  <% if @character.errors.any? %>
    <div id="errorExplanation">


      <% @character.errors.full_messages.each do |msg| %>
      <div class="row">
        <div class="alert alert-danger col-sm-6" role="alert"><strong><%= msg %>!</strong></div>
      </div>
      <% end %>

    </div>
  <% end %>

    <div class="form-group">
      <%= f.label :name, class: 'col-sm-1 control-label'%>
      <div class="col-sm-5">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
        <%= f.label :image, class: 'col-sm-1 control-label'%>
        <div class="col-sm-5">
          <%= f.file_field :image, class: 'form-control' %>
        </div>
    </div>

    <div class="form-group">
      <%= f.label :gender, class: 'col-sm-1 control-label' %>
      <div class="col-sm-2">
        <%= f.select(:gender, options_for_select([['Male', 1], ['Female', 2]]), {}, {class: "form-control"}) %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-6">
        <%= f.submit "Submit", class: "btn btn-default" %>
      </div>
    </div>

    <% end %>
